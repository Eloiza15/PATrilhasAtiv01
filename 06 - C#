using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
		 //Peça ao usuário para digitar um número decimal e armazene-o em uma variável decimal.
		 //Em seguida, exiba o valor da variável na tela.
		 
		 Console.WriteLine ("Digite um número decimal: ");
		 double numDecimal = Convert.ToDouble(Console.ReadLine());
		 Console.WriteLine ("O número que digitou foi: " + numDecimal);
			
		 
		 Console.WriteLine("");
		 Console.Write("Pressione qualquer tecla para fechar..");
		 Console.ReadKey(true);
			
		}
	}
}
